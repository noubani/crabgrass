<% url = url_for_group(group) -%>
<div class='group_entry'>
  <table><tr><td>
  <%= link_to avatar_for(group, 'medium'), url -%>
  </td><td>
  <%= link_to group.display_name, url -%>
  <div><%# group.profiles.public.summary_html %></div>
  </td></tr>
  <% if show_committees %>
  <tr>
  <td></td>
  <td>
    <% group.committees.each do |committee| %>
      <% if current_user && current_user.member_of?(committee) %>
        <% url = url_for_group(committee) -%>
        <%= link_to avatar_for(committee, 'small'), url -%>
        <%= link_to committee.display_name, url -%>
        <br class='clearL' />
      <% end %>  
    <% end %>
  </td></tr>  
  <% end %>
  </table>
  <br style='clear:left' />
</div>


